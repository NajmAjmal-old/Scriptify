{
  "manifest_version": 3,
  "name": "Scriptify",
  "version": "1.0",
  "description": "Add custom CSS and JavaScript to websites.",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
